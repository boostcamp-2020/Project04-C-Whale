{
  "manifest_version": 2, 
  "name": "할고래DO",
  "version": "1.0.0",

  "description": "스마트한 할일관리 서비스",

  "sidebar_action": {
    "default_icon": {               
      "16": "images/icon.png"
     },
    "default_page": "index.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "alarms",
    "contextMenus",
    "notifications",
    "storage",
    "bookmarks"
  ],

  "externally_connectable": {
    "matches": ["http://localhost/*", "http://115.85.183.106/*", "http://halgoraedo.kro.kr/*", "https://halgoraedo.kro.kr/*"]
  }
}